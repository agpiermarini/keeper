<section class="search-page">
  <section class="header">
    <h4 class="page-header">Twitter User Search</h4>
  </section>
  <section class="search-and-results">
    <section class="search section" fill-color="#8F8F8F">
      <%= form_tag '/search', class: "search-form", method: :get do %>
      <%= text_field_tag :username_query, nil, placeholder: "Name or username...", required: true %>
      <%= submit_tag "Search", class: 'btn search-btn' %>
      <!-- <%= link_to "Submit Text from a Non-Twitter Source", new_personality_profile_text_path, class: "btn search-btn" %> -->
      <% end %>
    </section>
    <% if @results %>
    <section class="profile-right">
      <section class="list-results">
        <h5 class="search-header">Search Results:</h4>
        <% @results.each do | user | %>
        <a href= <%= user.screen_name %> >
          <div class="result">
            <%= image_tag(user.profile_image_uri.to_s, class: 'thumbnail') %>
            <div class="names">
              <div class="name">
                <div class="title">
                  Name:
                </div>
                <div class="content">
                  <%= user.name %>
                </div>
              </div>
              <div class="name">
                <div class="title">
                  Username:
                </div>
                <div class="content">
                  <%= user.screen_name %>
                </div>
              </div>
            </div>
            <div class="location">
              <% unless user.location.length < 1 %>
              <div class="title">
                Location:
              </div>
              <div class="content">
                <%= user.location %>
              </div>
              <% end %>
            </div>
          </div>
          <% end %>
        </a>
      </section>
      <% end %>
    </section>
  </section>
</section>
